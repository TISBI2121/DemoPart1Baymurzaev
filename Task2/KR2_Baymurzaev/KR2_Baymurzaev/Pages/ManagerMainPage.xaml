<Page x:Class="KR2_Baymurzaev.Pages.ManagerMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KR2_Baymurzaev.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ManagerMainPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <StackPanel>
            <Button x:Name="BUserList" Content="Список сотрудников" Click="BUserList_Click"/>
            <Button x:Name="BTaskList" Content="Список задач" Click="BTaskList_Click"/>
        </StackPanel>

        <Frame Grid.Column="1" x:Name="ManagerFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Page>
