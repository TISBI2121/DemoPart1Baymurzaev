<Window x:Class="KR2_Baymurzaev.Windows.TaskUserAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KR2_Baymurzaev.Windows"
        mc:Ignorable="d"
        Title="TaskUserAddWindow" Height="450" Width="800">
    <Grid>

        <StackPanel>
            <TextBlock Text="Сотрудник"/>
            <ComboBox x:Name="CBUser" DisplayMemberPath="FIO"/>
            <TextBlock Text="Описание"/>
            <TextBox x:Name="TBDescription"/>
            <Button x:Name="BRegiste" Content="Назначить" Click="BRegiste_Click"/>
            <Button x:Name="BCancel" Content="Отменить" Click="BCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
